---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/SocialBox.astro";
import SocialBox from "../components/SocialBox.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Kilamper Portfolio | Ingenierio de Software y Desarrollador Web"
  description="Portfolio de Kilian Armas Pérez, estudiante de la Universidad de Las Palmas de Gran Canaria. Ingeniero de Software y Desarrollador Web."
>
  <main class="px-4">
    <section id="#top" class="w-full lg:w-[740px] pt-40 pb-10 mx-auto flex">
      <article>
        <h1
          class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex justify-center flex-row gap-x-4 pb-6 lg:pb-10"
        >
          Hello there, soy Kilamper <div
            class="flex justify-center items-center"
          >
            <span
              class="bg-blue-100 text-blue-800 text-base font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300"
              >Estudiando</span
            >
          </div>
        </h1>
        <h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
          <span class="text-blue-500 font-medium"
            >Estudiante de Ingeniería Informática en la ULPGC.</span
          > Ingeniero de Software y Desarrollador Web de las Islas Canarias, España.
        </h2>
        <nav class="flex flex-wrap gap-4 mt-8">
          <SocialBox href="https://github.com/Kilamper"
            ><i class="fa-brands fa-github"></i>GitHub</SocialBox
          >
          <SocialBox
            href="https://www.linkedin.com/in/kilian-armas-p%C3%A9rez-728590164/"
            ><i class="fa-brands fa-linkedin"></i>Linkedin</SocialBox
          >
        </nav>
      </article>
      <div class="bg-blue-500 w-12"></div>
    </section>
    <section id="#projects" class="w-full lg:w-[740px] py-40 mx-auto">
      <h2 class="text-2xl font-bold text-white pb-4">
        <i class="fa-solid fa-code"></i>Proyectos
      </h2>
      <Projects />
    </section>
  </main>
</Layout>
